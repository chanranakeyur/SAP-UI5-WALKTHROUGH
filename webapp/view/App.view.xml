<mvc:View
	id="App"
	controllerName="sap.ui.demo.walkthrough.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<App id="app" height="90%" homeIcon="true" >
		<Button
			text="Say Hi"
			id="txthello"
			press=".onShowHello"
		/>
		<Input
            id="inphellotext"
			valueLiveUpdate="true"
			width="40%"
		/>
		<Text text="Hello World" id="txt1"/>
	</App>
</mvc:View>